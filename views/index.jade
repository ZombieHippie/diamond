extends layout

block head
  style.
    .container { max-width: 750px }
    .mono { font-family: "Courier New" }

block content
  .container
    .page-header.text-center
      h1 n
      //pre #! hacking/modding/inventing
      each page, index in views
        - page = page.slice(0,-5)
        if index !== 0
          span &nbsp; - &nbsp;
        a(href=page)=page
    #demo
block footer
  script.
    log("Welcome to the index")
  script(src="/coffee/diamond.js")
  script(src="/js/jade-runtime.js")
  script template = {}
  script(src="/templates/files.js")
  script.
    demo = new Diamond("#demo")
    demo.onOpenFile = function (path, data) {
      console.log("opened file: ", path)
      console.log("file contents: ", data)
      alert(data)
    }